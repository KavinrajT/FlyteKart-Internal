<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.StoreActivity">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_store_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar"
        android:fontFamily="@font/opensans_medium"
        android:padding="16dp"
        android:text="@string/store_details"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <View
        android:id="@+id/v_store_details"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_store_details"
        android:background="@color/dark_grey" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_store_details"
        android:fontFamily="@font/opensans_medium"
        android:padding="16dp"
        android:text="@string/reports"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <View
        android:id="@+id/v_summary"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_summary"
        android:background="@color/dark_grey" />

    <TextView
        android:id="@+id/tv_categories_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_summary"
        android:fontFamily="@font/opensans_medium"
        android:padding="16dp"
        android:text="@string/categories_products"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <View
        android:id="@+id/v_categories_products"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_categories_products"
        android:background="@color/dark_grey" />

    <TextView
        android:id="@+id/tv_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_categories_products"
        android:fontFamily="@font/opensans_medium"
        android:padding="16dp"
        android:text="Orders"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <View
        android:id="@+id/v_orders"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_orders"
        android:background="@color/dark_grey" />

</RelativeLayout>